    <link href="css/style.css" rel="stylesheet">

  </head>
  <body>

    <div class="container">
	<div class="row">
		<div class="col-md-12">
			<nav class="navbar navbar-toggleable-lg navbar-light bg-light">
				 
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
					<span class="navbar-toggler-icon"></span>
				</button> <a class="navbar-brand" href="/">回首頁</a>
			</nav>
			<div class="jumbotron">
				<h2>
					員工新增
				</h2>
			</div>
			
			
			<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
			<!-- 內容                                 -->
			<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
			<div class="row">				
				<div class="col-md-12">		
					<form role="form" method="post" action="employeeAdd">
						<div class="form-group">							
							<label>員工編號</label>
							<input type="text" class="form-control" name="empNo"/>
						</div>
						
						<div class="form-group">							
							<label>員工姓名</label>
							<input type="text" required class="form-control" name="empName"/>
						</div>
                        <div class="form-group">		 
                            <label>
                                性別
                            </label>
                             <select type="text" class="form-control" name="gender" >
                                    <option value="M"> 男</option>
                                    <option value="F"> 女</option>
                            </select>
				        </div>
                        <div class="form-group">							
							<label>員工生日</label>
							<input type="date"  required class="form-control" name="birthday"/>
						</div>
                        <div class="form-group">		 
                            <label>
                                年齡
                            </label>
                            <input type="number" required class="form-control" name="age" />
				        </div>
                
						<div class="form-group">							
							<label>身分證字號</label>
							<input type="text" required class="form-control" name="id"/>
						</div>
						<div class="form-group">							
							<label>員工電話</label>
							<input type="text" required class="form-control" name="tel"/>
						</div>
                       <div class="form-group">		 
                            <label>
                                地址
                            </label>
                            <input type="text" required class="form-control" name="address" />
				       </div>
						
						<div class="form-group">							
							<label>電子郵件</label>
							<input type="email" required class="form-control" name="mail"/>
						</div>
						
						<div class="form-group">							
							<label>職等</label>
							<input type="text" required class="form-control" name="title"/>
						</div>
						
						<div class="form-group">							
							<label>到職日期</label>
							<input type="date" required class="form-control" id="theDate" name="arriveDate" />
							<script>
								//----------------------
								//設定初值為今日
								//----------------------
								var date = new Date();
								var day = date.getDate();
								var month = date.getMonth() + 1;
								var year = date.getFullYear();
								if (month < 10) month = "0" + month;
								if (day < 10) day = "0" + day;
								var today = year + "-" + month + "-" + day;       
								document.getElementById("theDate").value = today;
							</script>	
						</div>
						
						<button type="submit" class="btn btn-primary">確認</button>
					</form>
				</div>				
			</div>
			<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
		</div>
	</div>
</div>

    <script src="js/jquery.min.js"></script>
